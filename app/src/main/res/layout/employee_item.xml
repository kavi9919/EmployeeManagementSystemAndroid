<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:radius="8dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kavishka Nimsara"
                android:textSize="20sp"
                android:textStyle="bold" />
            <!-- ImageButton for editing the employee's details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="Edit Employee"
                android:src="@drawable/baseline_edit_24"
                android:padding="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                 />

            <!-- ImageButton for deleting the employee -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@color/red"
                android:contentDescription="delete"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:src="@drawable/baseline_delete_24"
                android:tint="#F44336"
                tools:ignore="UseAppTint" />
        </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvEmployeeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="william@example-pet-store.com"
            android:textColor="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            >

            <Button
                android:id="@+id/btnViewMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View More"

                />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
